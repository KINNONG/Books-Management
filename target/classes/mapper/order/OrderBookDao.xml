<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kinnong.modules.order.dao.OrderBookDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.kinnong.modules.order.entity.OrderBookEntity" id="orderBookMap">
        <result property="id" column="id"/>
        <result property="orderId" column="order_id"/>
        <result property="bookId" column="book_id"/>
        <result property="bookName" column="book_name"/>
        <result property="num" column="num"/>
        <result property="picUrl" column="pic_url"/>
        <result property="price" column="price"/>
    </resultMap>

	<select id="queryObject" resultType="com.kinnong.modules.order.entity.OrderBookEntity">
		select * from book_order_book where id = #{value}
	</select>

	<select id="queryList" resultType="com.kinnong.modules.order.entity.OrderBookEntity">
		select * from book_order_book
		
		<where>
			<if test="orderId != null">
				order_id = ${orderId}
			</if>
		</where>
		
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from book_order_book 
		<where>
			<if test="orderId != null">
				order_id = ${orderId}
			</if>
		</where>
	</select>
	 
	<insert id="save" parameterType="com.kinnong.modules.order.entity.OrderBookEntity" useGeneratedKeys="true" keyProperty="id">
		insert into book_order_book
		(
			`order_id`, 
			`book_id`,
			`book_name`,
			`num`,
			`pic_url`,
			`author`,
			`price`
		)
		values
		(
			#{orderId}, 
			#{bookId},
			#{bookName},
			#{num},
			#{picUrl},
			#{author},
			#{price}
		)
	</insert>
	 
	<update id="update" parameterType="com.kinnong.modules.order.entity.OrderBookEntity">
		update book_order_book 
		<set>
			<if test="orderId != null">`order_id` = #{orderId}, </if>
			<if test="bookId != null">`book_id` = #{bookId}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from book_order_book where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from book_order_book where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>